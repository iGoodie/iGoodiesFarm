package igoodie.igoodiesfarm.client.renderers;

import org.lwjgl.opengl.GL11;

import igoodie.igoodiesfarm.References;
import igoodie.igoodiesfarm.client.models.ModelCrop;
import net.minecraft.client.renderer.tileentity.TileEntitySpecialRenderer;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.util.ResourceLocation;

public class RenderCrop extends TileEntitySpecialRenderer
{

	private static final ResourceLocation texture = new ResourceLocation(References.MOD_ID+":textures/model/New.png");
	
	private ModelCrop model;
	
	public RenderCrop()
	{
		this.model = new ModelCrop();
	}
	
	@Override
	public void renderTileEntityAt(TileEntity tileEntity, double x, double y, double z, float f) 
	{
		GL11.glPushMatrix();
		
		GL11.glTranslatef((float)x+0.5f, (float)y+1.5f, (float)z+0.5f);
		GL11.glRotatef(180, 0F, 0F, 1F);
		
		this.bindTexture(texture);
		
		GL11.glPopMatrix();
	}

}
